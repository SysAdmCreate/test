<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test.MainPage">

    <Grid RowDefinitions="Auto,*,Auto" Padding="24,20">
        <VerticalStackLayout Spacing="12">
            <Label
                Text="BLE поруч"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Label
                Text="Натисніть, щоб знайти Bluetooth Low Energy пристрої навколо."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Button
                Text="{Binding ScanButtonText}"
                Command="{Binding ScanCommand}"
                HorizontalOptions="Fill" />

            <Button
                Text="Перейти до статусу пристрою"
                Command="{Binding OpenDeviceDetailCommand}"
                HorizontalOptions="Fill" />

            <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                <ActivityIndicator
                    IsRunning="{Binding IsScanning}"
                    IsVisible="{Binding IsScanning}" />
                <Label
                    Text="{Binding StatusText}"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding Devices}"
            SelectedItem="{Binding SelectedDevice, Mode=TwoWay}"
            SelectionMode="Single"
            Margin="0,16,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="12,10" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <Label
                            Text="{Binding Name}"
                            FontAttributes="Bold" />
                        <Label
                            Grid.Row="1"
                            Text="{Binding Id}"
                            FontSize="12"
                            TextColor="#6B6B6B" />
                        <Label
                            Grid.Column="1"
                            Text="{Binding RssiText}"
                            VerticalOptions="Center"
                            FontSize="12"
                            TextColor="#6B6B6B" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label
            Grid.Row="2"
            Text="{Binding FooterText}"
            FontSize="12"
            TextColor="#6B6B6B"
            HorizontalOptions="Center"
            Margin="0,10,0,0" />
    </Grid>

</ContentPage>
